@page
@using Packt.Shared;
@model Northwind.Web.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
        </thead>
        <tbody>

            @if(Model.Products is not null)
            {
                @foreach(Product s in Model.Products)
                {
                    <tr>
                    <td>@s.CategoryId</td>
                    <td>@s.ProductName</td>
                    <td>@s.Cost</td>
                    </tr>
              }
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Enter details for a new supplier:</p>
    <form method="POST">
        <div>
            <input asp-for="product.CategoryId"
                   placeholder="CategoryId" />
        </div>
        <div>
            <input asp-for="product.ProductName"
                   placeholder="ProductName" />
        </div>

        <div>
              <input asp-for="product.Cost"
                     placeholder="Cost" />
        </div>
        <input type="submit" />
    </form>
</div>


